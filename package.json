{
  "name": "@yelaiii/stylelint",
  "version": "2.0.0",
  "private": false,
  "description": "Stylelint config",
  "keywords": [
    "config",
    "css",
    "sort",
    "stylelint"
  ],
  "license": "ISC",
  "author": "iiivanpopov",
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsdown --dts",
    "lint": "oxlint --type-aware",
    "fmt": "oxfmt",
    "prepublishOnly": "pnpm build",
    "prepare": "husky"
  },
  "dependencies": {
    "local-pkg": "^1.1.2"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "@typescript/native-preview": "7.0.0-dev.20260129.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.27.0",
    "oxlint": "^1.42.0",
    "oxlint-tsgolint": "^0.11.3",
    "tsdown": "^0.20.1"
  },
  "peerDependencies": {
    "stylelint": "^16.25.0",
    "stylelint-config-recess-order": "^7.6.0",
    "stylelint-config-recommended": "^18.0.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-order": "^7.0.0"
  },
  "lint-staged": {
    "*": "pnpm oxfmt --no-error-on-unmatched-pattern",
    "*.ts": "pnpm lint"
  }
}
